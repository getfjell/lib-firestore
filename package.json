{
    "name": "@fjell/lib-firestore",
    "version": "4.4.0",
    "license": "Apache-2.0",
    "description": "Firestore Library for Fjell",
    "engines": {
        "node": ">=21"
    },
    "main": "dist/index.js",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "require": "./dist/index.js",
            "import": "./dist/index.js"
        }
    },
    "type": "module",
    "scripts": {
        "build": "tsc --noEmit && vite build",
        "lint": "eslint . --ext .ts --fix",
        "clean": "rimraf dist",
        "test": "pnpm run lint && NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" jest --coverage",
        "prepublishOnly": "pnpm run clean && pnpm run build"
    },
    "dependencies": {
        "@fjell/core": "^4.4.2",
        "@fjell/lib": "^4.4.0",
        "@fjell/logging": "^4.4.2",
        "@google-cloud/firestore": "^7.11.1",
        "@google-cloud/storage": "^7.16.0",
        "dayjs": "^1.11.13",
        "deepmerge": "^4.3.1",
        "multer": "2.0.1",
        "specifier-resolution-node": "^1.1.4",
        "winston": "^3.17.0"
    },
    "devDependencies": {
        "@babel/preset-env": "^7.27.2",
        "@babel/preset-react": "^7.27.1",
        "@babel/preset-typescript": "^7.27.1",
        "@eslint/eslintrc": "^3.3.1",
        "@eslint/js": "^9.27.0",
        "@jest/globals": "^29.7.0",
        "@swc/core": "^1.11.24",
        "@tsconfig/recommended": "^1.0.8",
        "@types/jest": "^29.5.14",
        "@types/multer": "^1.4.12",
        "@types/node": "^20.17.50",
        "@typescript-eslint/eslint-plugin": "^8.32.1",
        "@typescript-eslint/parser": "^8.32.1",
        "concurrently": "^8.2.2",
        "eslint": "^9.27.0",
        "jest": "^29.7.0",
        "nodemon": "^3.1.10",
        "rimraf": "^6.0.1",
        "ts-jest": "^29.3.4",
        "tsc-alias": "^1.8.16",
        "typescript": "^5.8.3",
        "vite": "^6.3.5",
        "vite-plugin-dts": "^4.5.4",
        "vite-plugin-node": "^5.0.1"
    },
    "packageManager": "pnpm@10.11.0",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/getfjell/lib-firestore.git"
    }
}